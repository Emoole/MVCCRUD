@model AlumnosModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Crear Alumno</h5>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Mantenedor" method="post">
            <div class="mb-3">
                <label class="form-label">Nombres</label>
                <input asp-for="Nombres" type="text" class="form-control">
                <span asp-validation-for="Nombres" class="text-danger"> </span>
            </div>
            <div class="mb-3">
                <label class="form-label">Apellidos</label>
                <input asp-for="Apellidos" type="text" class="form-control">
                <span asp-validation-for="Apellidos" class="text-danger"> </span>
            </div>
            <div class="mb-3">
                <label class="form-label">Genero</label>
                <input asp-for="Genero" type="text" class="form-control">
                <span asp-validation-for="Genero" class="text-danger"> </span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha Registro</label>
                <input asp-for="FechaRegistro" type="datetime" class="form-control">
                <span asp-validation-for="FechaRegistro" class="text-danger"> </span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

