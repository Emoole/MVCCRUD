@model AlumnosModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Eliminar Alumno</h5>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">
            <input asp-for="Id" type="text" class="form-control" type="hidden">
            <div class="alert alert-danger" role="alert">
                Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Nombres) @Html.DisplayTextFor(m => m.Apellidos)?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

